<div class="row">
  <div class="col-md-8">
    <h1><%= t "user.all" %></h1>
    <%= will_paginate %>
    <ul class="users">
      <% @users.each do |user| %>
        <li>
          <%= gravatar_for user, size: Settings.users.size %>
          <%= link_to user.username, user %>
          <% if current_user.admin? %>
            |<%= link_to "delete", user, method: :delete, data: {confirm: t("messages.confirm")} %>
          <% end %>
        </li>
      <% end %> 
    </ul>
    <%= will_paginate %>
  </div>
  <div class="col-md-4">
  </div>
</div>
