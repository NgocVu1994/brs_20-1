<div class="col-md-3 col-sm-4 col-xs-6">
	<% if book.image.present? %>
		<%= link_to image_tag(book.image, height: Settings.books.picture_height, width: Settings.books.picture_width), book %>
	<% else %>
		<%= link_to image_tag(Settings.books.url, height: Settings.books.picture_height, width: Settings.books.picture_width), book %>
	<% end %>
	<h4><%= link_to book.title, "#" %></h4>
	<p><%= book.author %></p>
</div>
