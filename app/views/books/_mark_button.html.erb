<div class="btn-mark-book">
  <% load_mark_button_class @book %>
  <div class=<%= @class_reading %> >
    <%= form_for(@reading, method: @reading_method, remote: true) do |f| %>
      <%= hidden_field_tag :book_id, @book.id %>
      <%= hidden_field_tag :status, Settings.books.marked_book.reading %>
      <%= f.submit t("book.mark_button.reading"), class: "btn btn-lg" %>
    <% end %>
  </div>
  <div class=<%= @class_read %> >
    <%= form_for(@read, method: @read_method,remote: true) do |f| %>
      <%= hidden_field_tag :book_id, @book.id %>
      <%= hidden_field_tag :status, Settings.books.marked_book.read %>
      <%= f.submit t("book.mark_button.read"), class: "btn btn-lg" %>
    <% end %>
  </div>
  <div class=<%= @class_favorite%> >
    <%= form_for(@favorite, method: @favorite_method, remote: true) do |f| %>
      <%= hidden_field_tag :book_id, @book.id %>
      <%= f.submit t("book.mark_button.favorite"), class: "btn btn-lg" %>
    <% end %>
  </div>
</div>
