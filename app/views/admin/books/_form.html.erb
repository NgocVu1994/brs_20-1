<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "shared/error_messages", object: @book %>
    <div class "form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class "form-group">
      <%= f.label :description %>
      <%= f.text_area :content, rows: Settings.book_form.description , class: "form-control" %>
    </div>

    <div class "form-group">
      <%= f.label :author %>
      <%= f.text_field :author, class: "form-control" %>
    </div>

    <div class "form-group">
      <%= f.label :number_of_pages %><br>
      <%= f.number_field :number_of_pages %>
    </div>

    <div class "form-group">
      <%= f.label :publish_date %><br>
      <%= f.date_field :publish_date %>
    </div>

    <div class "form-group">
      <%= f.label :category %><br>
      <%= f.collection_select :category_id, @categories, :id, :name %>
    </div><br>
    <%= f.submit t(:submit), class: "btn btn-primary" %>
    <%= link_to t("admin.books.cancel"), admin_books_path  %>
  </div>
</div>
