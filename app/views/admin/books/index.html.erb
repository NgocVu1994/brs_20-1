<table class="table table-hover">
  <thead>
    <tr class="info">
      <th><%= t "admin.books.table.id" %></th>
      <th><%= t "admin.books.table.image" %></th>
      <th><%= t "admin.books.table.title" %></th>
      <th><%= t "admin.books.table.content" %></th>
      <th><%= t "admin.books.table.author" %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.id %></td>
        <td>
          <% if book.image.present? %>
            <%= link_to image_tag(book.image, size: Settings.books.size), book %>
          <% else %>
            <%= link_to image_tag(Settings.books.url, size: Settings.books.size), book %>
          <% end %>
        </td>
        <td><%= link_to book.title, "#" %></td>
        <td><%= book.content.truncate Settings.books.content %></td>
        <td><%= book.author %></td>
        <td>
          <%= link_to t("admin.books.table.edit"), edit_admin_book_path(book),
            class: "btn btn-primary" %>
          <%= link_to t("admin.books.table.delete"), admin_book_path(book),
            method: :delete, data: {confirm: t("messages.confirm")}, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate %>
