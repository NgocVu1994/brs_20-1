<%= search_form_for @search, url: admin_books_path, class: "form-inline " do |f| %>
  <div class="navbar-header">
    <%= f.label :title %>
    <%= f.search_field :title_cont, class: "form-control" %>
  </div>
  <div class="navbar-header">
    <%= f.label :author %>
    <%= f.search_field :author_cont, class: "form-control" %>
  </div>
  <div class="navbar-header">
    <%= f.label :category_id %>
    <%= f.select :category_id_eq,
      options_from_collection_for_select(@categories, :id, :name), class: "form-control" %>
  </div>
  <div class="navbar-header">
    <%= f.submit t("admin.books.submit"), class: "btn btn-default button-width" %>
  </div>
<% end %>
