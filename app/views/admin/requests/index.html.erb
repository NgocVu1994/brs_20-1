<div class="container-fluid">
  <div class="row">
    <hr>
    <ul class="breadcrumb">
      <li><%= link_to t(:home), root_path %></li>
      <li><%= t "admin.name" %></li>
      <li class="active"><%= t "admin.request.index" %></li>
    </ul>
    <hr>
  </div>
  <div class="row">
    <table class="table table-striped"> 
      <thead> 
        <tr> 
          <th><%= t "admin.request.table.id" %></th>
          <th><%= t "admin.request.table.book_name" %></th> 
          <th><%= t "admin.request.table.author" %></th> 
          <th><%= t "admin.request.table.user" %></th>
          <th><%= t "admin.request.table.at" %></th>
          <th><%= t "admin.request.table.action" %></th> 
        </tr> 
      </thead> 
      <tbody id="requests-body">
        <% @requests.each_with_index do |request, index| %>
          <tr> 
            <th scope="row"><%= index + 1 %></th> 
            <td><%= link_to request.book_name, admin_request_path(request) %></td> 
            <td><%= request.author %></td> 
            <td><%= link_to request.user.username, request.user %></td> 
            <td><%= request.created_at %></td> 
            <td>
              <%= link_to t("admin.request.table.detail"),
                admin_request_path(request), class: "btn btn-info" %>
              <%= link_to t("admin.request.table.respond"),
                admin_request_path(request), class: "btn btn-success",
                method: :put, data: {confirm: t("messages.confirm")} %>
            </td>
          </tr> 
        <% end %>
      </tbody> 
    </table>
    <%= will_paginate %> 
  </div>
</div>
