<table class="table table-hover">
  <thead>
    <tr class="info">
      <th><%= t "admin.user.table.id" %></th>
      <th><%= t "admin.user.table.username" %></th>
      <th><%= t "admin.user.table.email" %></th>
      <th><%= t "admin.user.table.role" %></th>
      <th><%= t "admin.user.table.created_at" %></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= link_to user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.role.capitalize %></td>
        <td><%= user.created_at %></td>
        <td><%= link_to t("amin.users.table.edit"), edit_admin_user_path(user),
          class: "btn btn-primary" %></td>
        <td>
          <%= link_to t("admin.users.table.delete"), admin_user_path(user),
            method: :delete, data: {confirm: t("messages.confirm")}, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
