<h2><%= t "user.request.title" %></h2>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for current_user.requests.build do |f| %>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <div class="form-group">
        <%= f.text_field :book_name, class: "form-control",
          placeholder: t("user.request.book_name") %>
      </div>

      <div class="form-group">
        <%= f.text_field :author, class: "form-control",
          placeholder: t("user.request.author") %>
      </div>

      <div class="form-group">
        <%= f.text_area :content, class: "form-control",
          placeholder: t("user.request.content") %>
      </div>

      <div class="form-group">
        <%= f.url_field :content, class: "form-control",
          placeholder: t("user.request.url") %>
      </div>

      <div class="actions text-center">
        <%= f.submit t("user.request.button"), class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
